<header class="bg-white text-black p-4 shadow">
  <nav class="container mx-auto flex justify-between items-center gap-4">
    <!-- Logo -->
    <a href="/" class="text-xl font-bold text-blue-600 whitespace-nowrap">Social Network</a>

    <!-- Thanh tìm kiếm -->
    <div class="flex-1 max-w-md">
      <form action="/users/search" method="GET">
        <input 
          type="text" 
          name="query" 
          placeholder="Tìm kiếm..." 
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        >
      </form>
    </div>

    <!-- Nút Logout -->
    <div class="whitespace-nowrap">
      <% if (user) { %>
        <a href="/auth/logout" class="mx-2 text-blue-600 hover:underline">Logout</a>
      <% } %>
    </div>
  </nav>
</header>
