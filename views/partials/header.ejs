<header class="bg-white text-black p-4 shadow">
  <nav class="container mx-auto flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="text-xl font-bold text-blue-600">Social Network</a>

    <!-- Thanh tìm kiếm -->
    <div class="flex-1 mx-4">
      <form action="/users/search" method="GET">
        <input 
          type="text" 
          name="query" 
          placeholder="Search" 
          class="w-full p-2 border rounded" 
          required
        >
      </form>
    </div>

    <!-- Nút Logout -->
    <div>
      <% if (user) { %>
        <a href="/auth/logout" class="mx-2">Logout</a>
      <% } %>
    </div>
  </nav>
</header>
