<!-- chat-modal.ejs -->
<div id="chatModal" class="chat-modal hidden fixed bottom-0 right-4 bg-white rounded-lg shadow-xl w-96 z-50" data-user-id="">
  <div class="chat-modal-header bg-blue-600 text-white p-3 rounded-t-lg flex justify-between items-center">
    <span id="chatWithUsername" class="font-semibold">Đang trò chuyện</span>
    <button id="closeChatModal" class="text-white font-bold text-lg hover:text-gray-200">×</button>
  </div>
  <div id="chatMessages" class="chat-messages p-4 h-96 overflow-y-auto bg-gray-50"></div>
  <div id="typingIndicator" class="p-2 text-gray-500 text-sm italic hidden">Đang nhắn tin...</div>
  <div id="dragDropArea" class="drag-drop-area hidden absolute bg-white p-4 rounded-lg z-20 flex flex-col items-center justify-center">
    <div id="dragDropMedia" class="drag-drop-content hidden flex flex-col items-center">
      <svg class="w-12 h-12 text-gray-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <p class="text-gray-500">Kéo thả ảnh, video, hoặc âm thanh vào đây (tối đa 10 file, 100MB/file)</p>
    </div>
    <div id="dragDropFiles" class="drag-drop-content hidden flex flex-col items-center">
      <svg class="w-12 h-12 text-gray-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <p class="text-gray-500">Kéo thả tài liệu (.pdf, .docx, .xlsx, .zip, .rar) vào đây (tối đa 10 file, 100MB/file)</p>
    </div>
  </div>
  <form id="chatForm" class="chat-form flex flex-col p-3 border-t bg-white" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="file" id="fileInputMedia" name="media" multiple accept=".jpg,.jpeg,.png,.mp4,.mov,.mp3,.wav" class="hidden">
    <input type="file" id="fileInputFiles" name="files" multiple accept=".pdf,.docx,.xlsx,.zip,.rar" class="hidden">
    <div id="selectedFiles" class="p-3 border-t bg-white hidden flex flex-wrap gap-2"></div>
    <div class="flex gap-2 items-center">
      <button type="button" id="chooseMediaBtn" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </button>
      <button type="button" id="chooseFilesBtn" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </button>
      <input type="text" id="chatInput" name="content" class="flex-1 border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Nhập tin nhắn..." autocomplete="off">
      <button type="submit" class="ml-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Gửi</button>
    </div>
  </form>
</div>