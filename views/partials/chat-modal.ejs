<!-- chat-modal.ejs -->
<div id="chatModal" class="chat-modal hidden fixed bottom-0 right-4 bg-white rounded-lg shadow-xl w-96 z-50" data-user-id="">
  <div class="chat-header bg-blue-600 text-white p-3 rounded-t-lg flex justify-between items-center">
    <span id="chatWithUsername" class="font-semibold">Đang trò chuyện</span>
    <button id="closeChatModal" class="text-white font-bold text-lg hover:text-gray-200">×</button>
  </div>
  <div id="chatMessages" class="chat-messages p-4 h-96 overflow-y-auto bg-gray-50">
    <!-- Tin nhắn sẽ được chèn ở đây -->
  </div>
  <div id="typingIndicator" class="p-2 text-gray-500 text-sm italic hidden">
    Đang nhắn tin...
  </div>
  <form id="chatForm" class="chat-form flex p-3 border-t bg-white">
    <input type="text" id="chatInput" class="flex-1 border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Nhập tin nhắn..." autocomplete="off">
    <button type="submit" class="ml-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Gửi</button>
  </form>
</div>