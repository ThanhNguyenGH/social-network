<!-- chat.ejs -->
<div class="chat-container">
    <!-- Chat Header -->
    <div class="chat-header">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <img id="chatAvatar" src="/default-avatar.png" alt="Avatar" 
                     class="w-10 h-10 rounded-full border-2 border-white/20">
                <div>
                    <h3 id="chatUsername" class="font-semibold text-lg">Chọn người để trò chuyện</h3>
                    <p id="chatStatus" class="text-blue-100 text-sm opacity-90">Offline</p>
                </div>
            </div>
            <div class="flex items-center gap-2">
                <button id="chatInfoBtn" class="p-2 hover:bg-white/10 rounded-full transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Chat Messages -->
    <div id="chatMessages" class="chat-messages">
        <div class="text-center py-8">
            <div class="text-gray-400 text-sm">
                <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                <p>Bắt đầu cuộc trò chuyện mới</p>
            </div>
        </div>
    </div>

    <!-- Typing Indicator -->
    <div id="typingIndicator" class="hidden px-4 py-2">
        <div class="typing-indicator">
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
            <span class="ml-2 text-sm text-gray-500">đang nhắn tin...</span>
        </div>
    </div>

    <!-- Chat Input Area -->
    <div class="chat-input-area">
        <!-- File Preview -->
        <div id="filePreview" class="file-preview hidden">
            <div class="flex items-center justify-between mb-3">
                <span class="text-sm font-medium text-gray-700">File đã chọn</span>
                <button id="clearFilesBtn" class="text-gray-400 hover:text-red-500 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <div id="selectedFiles" class="space-y-2 max-h-32 overflow-y-auto"></div>
        </div>

        <!-- Drag Drop Area -->
        <div id="dragDropArea" class="drag-drop-area">
            <div class="flex flex-col items-center gap-2">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                <p class="text-sm">Kéo thả file hoặc 
                    <button type="button" id="chooseFileBtn" class="text-blue-600 hover:text-blue-700 font-medium underline">
                        chọn từ máy tính
                    </button>
                </p>
                <p class="text-xs text-gray-400">Tối đa 10 file, 100MB/file</p>
            </div>
        </div>

        <!-- Message Form -->
        <form id="chatForm" class="message-form" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <textarea id="messageInput" name="content" 
                      class="message-input" 
                      placeholder="Nhập tin nhắn..." 
                      rows="1"></textarea>
            <button type="submit" id="sendButton" class="send-button">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
            </button>
        </form>
    </div>

    <!-- Hidden File Inputs -->
    <input type="file" id="fileInputMedia" name="media" multiple 
           accept=".jpg,.jpeg,.png,.mp4,.mov,.mp3,.wav" class="hidden">
    <input type="file" id="fileInputFiles" name="files" multiple 
           accept=".pdf,.docx,.xlsx,.zip,.rar" class="hidden">
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>