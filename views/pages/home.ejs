<h1 class="text-2xl font-bold mb-4">Home</h1>
<!-- Form tạo bài đăng -->
<form action="/posts/create" method="POST" class="mb-6">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <textarea name="content" class="w-full p-2 border rounded" placeholder="What's on your mind?" required></textarea>
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded mt-2">Post</button>
</form>
<!-- Danh sách bài đăng -->
<div>
  <% if (posts.length === 0) { %>
    <p>No posts available yet.</p>
  <% } else { %>
    <% posts.forEach(post => { %>
      <div class="bg-white p-4 mb-4 rounded shadow">
        <p><strong><%= post.user.username %></strong> - <%= post.createdAt.toLocaleString() %></p>
        <p><%= post.content %></p>
        <p><%= post.likes.length %> Likes</p>
      </div>
    <% }) %>
  <% } %>
</div>