
<div class="container mt-5">
  
  <h1>Search Users</h1>
  <form action="/users/search" method="GET" class="mb-4">
    <div class="input-group">
      <input type="text" class="form-control" name="query" placeholder="Search by username" value="<%= query %>">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <% if (users.length > 0) { %>
    <h3>Results</h3>
    <div class="row">
      <% users.forEach(user => { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <img src="<%= user.avatar || '/images/default-avatar.png' %>" alt="Avatar" class="card-img-top" width="100" height="100">
            <div class="card-body">
              <h5 class="card-title"><a href="/users/profile/<%= user._id %>"><%= user.username %></a></h5>
              <p class="card-text"><%= user.email %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else if (query) { %>
    <p>No users found for "<%= query %>".</p>
  <% } %>
</div>