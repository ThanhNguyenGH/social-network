<div class="container mt-5">
  <h1>Edit Profile</h1>
  <form action="/users/edit" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
    </div>
    <div class="mb-3">
      <label for="bio" class="form-label">Bio</label>
      <textarea class="form-control" id="bio" name="bio" rows="4"><%= user.bio || '' %></textarea>
    </div>
    <div class="mb-3">
      <label for="avatar" class="form-label">Avatar</label>
      <input type="file" class="form-control" id="avatar" name="avatar" accept="image/*">
      <% if (user.avatar) { %>
        <img src="<%= user.avatar %>" alt="Current Avatar" class="mt-2" width="100" height="100">
      <% } %>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/users/profile/<%= user._id %>" class="btn btn-secondary">Cancel</a>
  </form>
</div>